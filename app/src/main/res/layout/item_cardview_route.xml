<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sectionIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/icon_walker"
        android:minWidth="20dp"
        android:minHeight="20dp"
        app:srcCompat="@drawable/ic_directions_walk_black_24dp" />

    <TextView
        android:id="@+id/sectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:scrollbars="horizontal"
        tools:text="100 Ð¼" />

    <ImageView
        android:id="@+id/nextIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/icon_next"
        android:minWidth="20dp"
        android:minHeight="20dp"
        app:srcCompat="@drawable/ic_navigate_next_black_24dp" />
</LinearLayout>